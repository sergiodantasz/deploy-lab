# Django secret key (use a long, random, unique value)
SECRET_KEY=YOUR_SECRET_KEY_HERE

# Debug mode: ON for development, OFF for production
DEBUG=ON

# Allowed hosts: comma-separated list of hostnames or IPs
# Example: localhost,127.0.0.1,api.example.com
ALLOWED_HOSTS=*

# Database configuration (PostgreSQL)
# When running via Docker Compose, use "psql" as the host (service name)
POSTGRES_HOST=psql
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=123
POSTGRES_DB=db

# Current environment: development or production
CURRENT_ENV=development
