# Django secret key
# Use a long, random, unique value in production.
SECRET_KEY=your_secret_key

# Debug mode
# Set to ON for development and OFF for production.
DEBUG=ON

# Allowed hosts (comma-separated)
# Use "*" only for development.
# Example: localhost,127.0.0.1,api.example.com
ALLOWED_HOSTS=*

# PostgreSQL configuration
# When running via Docker Compose, use the service name as host (e.g. "psql").
POSTGRES_HOST=psql
POSTGRES_PORT=5432
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=db

# Application environment
# Must be either: development or production.
CURRENT_ENV=development

# Public domain used for Nginx and Let's Encrypt certificate issuance.
DOMAIN=_
# Email used by Let's Encrypt for certificate notifications.
EMAIL=youremail@example.com

# Nginx upstream service name
# Must match the Docker Compose service name of the application container.
# Nginx will use this value to route requests internally (e.g. proxy_pass).
NGINX_UPSTREAM_SERVICE=app
